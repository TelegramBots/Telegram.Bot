<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.1</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Product>Telegram Bot API</Product>
    <Description>Telegram Bot API Class Library</Description>
    <Authors>Robin Müller</Authors>
    <Copyright>Copyright © Robin Müller 2016</Copyright>
    <PackageIconUrl>https://telegram.org/file/811140058/2/7GzMJk4Ij54/a1649c56fa9f805828</PackageIconUrl>
    <PackageProjectUrl>https://github.com/MrRoundRobin/telegram.bot</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/MrRoundRobin/telegram.bot/master/LICENSE.txt</PackageLicenseUrl>
    <PackageReleaseNotes>Bot API 3.0</PackageReleaseNotes>
    <Company />
    <Product>Telegram Bot API</Product>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Telegram Api Bot</PackageTags>
    <RepositoryUrl>https://github.com/MrRoundRobin/telegram.bot.git</RepositoryUrl>
    <Version Condition="'$(APPVEYOR)' == 'True'">12.0.0-ci-$([System.DateTime]::Now.ToString("yyyyMMdd-HHmmss"))</Version>
    <VersionPrefix>12.0.0</VersionPrefix>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\documentation.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
  </ItemGroup>

</Project>
